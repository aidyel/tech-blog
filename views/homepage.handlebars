<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post.post_body}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_body}})</span>
      </div>
      <div class="meta">
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>